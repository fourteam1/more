<!--pages/mine/mine.wxml-->
<view class='mine'>
  <view class='content'>
    <view class='portrait'>
      <view class='ctrl'>
        <icon class='iconfont icon-shezhi'></icon>
        <icon class='iconfont icon-xiaoxix'></icon>
      </view>
      <view class='img'>
        <image src='../image/1.jpg'/>
        <text class='name'>JZR9700</text>
      </view>
    </view>
    <view class='indent'>
      <view class='indent_all' bindtap='goIndent'>
        <view class='left'>
          <icon class='iconfont icon-dingdan'></icon>
          <text>我的订单</text>
        </view>
        <view class='right'>
          <text>查看全部订单</text>
          <icon class='iconfont icon-youjiantou'></icon>
        </view>
      </view>
      <view class='menu'>
        <view class='menuCon'>
          <view class='item'>
            <icon class='iconfont icon-daifukuan'></icon>
            <text>待付款</text>
          </view>
          <view class='item'>
            <icon class='iconfont icon-biaozhundaifenxiang'></icon>
            <text>待分享</text>
          </view>
          <view class='item'>
            <icon class='iconfont icon-unie63e'></icon>
            <text>待发货</text>
          </view>
          <view class='item'>
            <icon class='iconfont icon-daifahuo'></icon>
            <text>待发货</text>
          </view><view class='item'>
            <icon class='iconfont icon-daipingjia'></icon>
            <text>待评价</text>
          </view>
        </view>
      </view>
      <view class='list'>
        <view class='list_item' bindtap='goOffer'>
          <icon class='iconfont icon-youhuiquan'></icon>
          <text>优惠券</text>
          <icon class='iconfont icon-youjiantou'></icon>
        </view>
        <view class='list_item' bindtap='goCollection'>
          <icon class='iconfont icon-shangpinshoucang'></icon>
          <text>商品收藏</text>
          <icon class='iconfont icon-youjiantou'></icon>
        </view>
        <view class='list_item' bindtap='goBrowsing'>
          <icon class='iconfont icon-lishiliulan'></icon>
          <text>历史浏览</text>
          <icon class='iconfont icon-youjiantou'></icon>
        </view>
        <view class='list_item' bindtap='goRefund'>
          <icon class='iconfont icon-tuikuan'></icon>
          <text>退款售后</text>
          <icon class='iconfont icon-youjiantou'></icon>
        </view>
      </view>
    </view>
  </view>
</view>
