/* 购物车 */
.shop {
  width: 20rem;
  height: 100vh;
}
/* 购物车包裹 */
.shop-box {
  width: 100%;
  overflow: hidden;
}
/* 空购物车 */
.shop-empty {
  width: 100%;
  height: 100%;
  text-align: center;
}

  /* 图片 */
image {
  width: 284rpx;
  height: 170rpx;
  margin-top: 375rpx;
  margin-left: 203rpx;
  margin-right: 256rpx;
  margin-bottom: 49rpx;
}
  /* 提示文本*/
.empty {
  width: 100%;
  font-size: 30rpx;
  color: #999;
}
  /* 去逛逛按钮 */
.btn {
  width: 202rpx;
  height: 78rpx;
  line-height: 78rpx;
  margin-top: 58rpx;
  background-color: #278c58;
  border-radius: 14rpx;
  font-size: 26rpx;
  color: #fff;
}
/* 有值购物车 */
.shop-Valued {
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}
  /* 每一个商品 */
.shop-item {
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
  padding: 57rpx 24rpx 52rpx 24rpx;
  box-shadow: 0 1rpx 2rpx 0 raba(0,0,0,.06) inset rgba(225,228,228,0.35);
  box-sizing: border-box;
  background: #fff;
}
  /* 商品是否选中 */
.iconfont {
  font-size: 48rpx;
}
  /* 商品图片 */
image {
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 5rpx;
  margin-left: 33rpx;
  margin-right: 29rpx;
  margin-top: 0;
  margin-bottom: 0;
}
  /* 商品详细信息 */
.item-content {
  flex: 1;
  height: 180rpx;
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
}
  /* 商品名称和颜色共同样式 */
.goods_name,.short_name {
  display: block;
  width: 410rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
  /* 商品名称 */
.goods_name {
  margin-bottom: 21rpx;
}
  /* 商品颜色 */
.short_name {
  margin-bottom: 48rpx;
  font-size: 28rpx;
  color: #afafaf;
}
  /* 商品价格 */
.market_price {
  display: block;
  font-size: 26rpx;
  color: #df0000;
}
